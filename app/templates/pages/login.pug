.row
	.login-container.col-xs-10.col-xs-offset-1.col-md-6.col-md-offset-3.col-lg-4.col-lg-offset-4
		form.full-width(role="form", novalidate, name="loginForm")
			.form-group(ng-class="{'has-error': errors.email}")
				label(for="email") Email:
				input.form-control#email(type="email", name="login", ng-model="user.email", ng-model-options="{ debounce: 150 }", required)

				.help-block(ng-show="errors.email") {{errors.email}}

			.form-group(ng-class="{'has-error': errors.password}")
				label(for="password") Пароль:
				input#password.form-control(type="password", name="password", ng-model="user.password", ng-model-options="{ debounce: 150 }", required)

				.help-block(ng-show="errors.password") {{errors.password}}

			button.btn.btn-success(ng-click="login()") Войти